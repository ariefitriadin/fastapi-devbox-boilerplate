# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql+asyncpg://ari3@:5433/postgres?host=/home/ari3/petprojects/python/apiboilerplate/.devbox/virtenv/postgresql

# ============================================
# APPLICATION
# ============================================
APP_NAME="AI-Powered FastAPI"
DEBUG=True
ENVIRONMENT=local  # local | staging | production
LOG_LEVEL=INFO

# ============================================
# SECURITY
# ============================================
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production
API_KEY_HEADER=X-API-Key

# ============================================
# LLM PROVIDERS (Enable/Disable as needed)
# ============================================
# Default provider: openai | anthropic | ollama | azure-openai
# For local development, use "ollama" (free, no API key needed)
DEFAULT_LLM_PROVIDER=ollama

# OpenAI Configuration
# Get your API key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Anthropic (Claude) Configuration
# Get your API key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20240620

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# Ollama (Local) Configuration
# Install: curl -fsSL https://ollama.com/install.sh | sh
# Pull model: ollama pull llama3.1:8b
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# ============================================
# EMBEDDINGS CONFIGURATION
# ============================================
EMBEDDING_PROVIDER=local  # local | openai | cohere
LOCAL_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384   # Depends on model (384 for all-MiniLM-L6-v2)

# ============================================
# VECTOR DATABASE
# ============================================
VECTOR_STORE=pgvector  # pgvector | chromadb | pinecone
VECTOR_INDEX_NAME=embeddings
SIMILARITY_THRESHOLD=0.75

# ============================================
# COMPUTER VISION (YOLO)
# ============================================
YOLO_MODEL_VERSION=yolov8n  # yolov8n | yolov8s | yolov8m | yolov8l | yolov8x
YOLO_MODEL_PATH=./data/models/yolo/yolov8n.pt
YOLO_CONFIDENCE_THRESHOLD=0.5
YOLO_IOU_THRESHOLD=0.45
YOLO_DEVICE=cpu  # cpu | cuda | mps (Mac M1/M2)

# ============================================
# TASK QUEUE (Celery)
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_TRACK_STARTED=True
CELERY_TASK_TIME_LIMIT=300  # 5 minutes

# Worker Configuration
WORKER_CONCURRENCY=4
WORKER_PREFETCH_MULTIPLIER=1

# ============================================
# CACHING STRATEGY
# ============================================
REDIS_URL=redis://localhost:6379/2
CACHE_TTL=3600  # 1 hour
SEMANTIC_CACHE_ENABLED=True
SEMANTIC_CACHE_THRESHOLD=0.95

# ============================================
# RATE LIMITING & COST CONTROL
# ============================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_USER=100  # requests per hour
DAILY_BUDGET_USD=50.0
MAX_TOKENS_PER_REQUEST=8000

# ============================================
# OBSERVABILITY
# ============================================
# LangSmith (Optional - for LLM tracing)
# Get API key at: https://smith.langchain.com/
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=my-ai-project
LANGSMITH_TRACING=False

# Prometheus Metrics
PROMETHEUS_ENABLED=True
PROMETHEUS_PORT=9090

# ============================================
# FILE STORAGE
# ============================================
UPLOAD_DIR=./data/uploads
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,txt,docx,png,jpg,jpeg

# Cloud Storage (Optional)
STORAGE_BACKEND=local  # local | s3 | gcs | azure-blob

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# Google Cloud Storage
GCS_BUCKET=
GCS_PROJECT_ID=

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=
AZURE_CONTAINER_NAME=
